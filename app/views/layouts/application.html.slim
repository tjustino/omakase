doctype html
html
  head
    title Omakase
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_pack_tag "application", media: "all"
    = javascript_pack_tag "application"

  body
    / navbar
    nav.navbar.is-link role="navigation" aria-label="main navigation"
      .container
        .navbar-menu
          .navbar-start
            = link_to "Omakase", root_path, class: navbar_item("home", "index")
            = link_to "ðŸŽ²", dice_path, class: navbar_item("home", "dice")
          .navbar-end
            .navbar-item.has-dropdown.is-hoverable
              a class=navbar_link Configuration
              .navbar-dropdown
                = link_to "Enfants", enfants_path, class: "navbar-item"
                = link_to "Encadrant", encadrants_path, class: "navbar-item"

    / section
    section.section
      .container
        - if flash[:alert]
          .notification.is-danger
            button.delete
            = flash[:alert]
        - elsif flash[:warning]
          .notification.is-warning
            button.delete
            = flash[:warning]
        - elsif flash[:notice]
          .notification.is-success
            button.delete
            = flash[:notice]
        = yield

    / - if Rails.env.development?
    /   = console
